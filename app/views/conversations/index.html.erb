<h1>Conversation Index</h1>

<div class="ui segment">
  <h3>Mailbox</h3>

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id %>
            <p> recipient<% recipient = Flyer.find(conversation.recipient_id) %></P>
              <%= link_to recipient.to_s, conversation_messages_path(conversation)%>
          <% else %>
            <% nil %>
          <br>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
