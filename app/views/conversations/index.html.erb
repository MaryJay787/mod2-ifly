        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = Flyer.find(conversation.recipient_id) %>
          <% else %>
            <% sender = Flyer.find(conversation.sender_id) %>
          <% end %>
          <%= link_to recipient.to_s, conversation_messages_path(conversation)%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>



